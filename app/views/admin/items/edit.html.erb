<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <p>商品画像</p>
  <%= f.file_field :item_image, accept: "image/*" %>
  <p>商品名</p>
  <%= f.text_field :name %>
  <p>商品説明</p>
  <%= f.text_area :introduction %>
  <p>ジャンル</p>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  <p>税抜価格</p>
  <%= f.text_field :price %>
  <%= f.label :price, "円" %>
  <p>販売ステータス</p>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "販売中"%>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中"%><br>
  <%= f.submit '保存を変更' %>
 <% end %>