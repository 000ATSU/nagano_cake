<div class=".container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="bg-info">
      <h2>商品新規登録</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-5">
      <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name, required: true %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, required: true %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, required: true, include_blank: "選択して下さい" %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price, required: true %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中"%>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中"%><br>
          </td>
        </tr>
        <tr>
          <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
        </tr>
      </table>
       <% end %>
    </div>
  </div>
</div>