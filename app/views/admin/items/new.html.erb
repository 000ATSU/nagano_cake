<h1>商品新規登録</h1>
<%= form_with model: @item do |f| %>
  <p>商品画像</p>
  <%= f.file_field :item_image, accept: "image/*" %>
  <p>Name</p>
  <%= f.text_field :name, class: "form-control" %>
  <p>introduction</p>
  <%= f.text_area :introduction, class: "form-control" %></br>
  <%= f.submit 'Update User', class: "btn btn-secondary" %>
 <% end %>