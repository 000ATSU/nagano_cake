<div class=".container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="bg-info">
      <h2>会員一覧</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-6">
      <table class="table">
        <thead class="bg-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th></th>
            <th>メールアドレス</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.first_name %><%= customer.last_name %>
              <% end %>
            </td>
            <td></td>
            <td><%= customer.email %></td>
            <td></td>
            <td>
              <% if customer.is_active == true %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">退会</span>
              <% end %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>