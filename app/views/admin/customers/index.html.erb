<h1>会員一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th></th>
      <th>メールアドレス</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.first_name %><%= customer.last_name %>
        <% end %>
      </td>
      <td></td>
      <td><%= customer.email %></td>
      <td></td>
      <td>
        <% if customer.is_active == true %>
          <span>有効</span>
        <% else %>
          <span>退会</span>
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>