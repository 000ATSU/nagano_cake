<div class=".container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="bg-info">
      <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_active == true %>
              <span class="text-success">有効</span>
            <% else %>
              <span class"text-secondary">退会</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="mx-auto">
      <%= link_to '編集', edit_admin_customer_path, class: "btn btn-success" %>
    </div>
    <div class="mx-auto">
      <%= link_to '注文履歴一覧を見る', admin_root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-3"></div>
  </div>
</div>

