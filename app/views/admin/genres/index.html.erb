<div class=".container">
   <div class="row mt-5">
      <div class="col-3"></div>
      <div class="bg-info">
        <h2>ジャンル一覧・追加</h2>
      </div>
   </div>
   <div class="row mt-5">
     <div class="col-3"></div>
     <div class="col-3">
       <%= form_with model: @genre, url:admin_genres_path do |f| %>
       <table class="table table-borderless">
         <tr>
           <th>ジャンル名</th>
           <td><%= f.text_field :name, required: true %></td>
           <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
         </tr>
       </table>
       <% end %>
     </div>
   </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-3">
      <table class="table">
       <thead class="bg-secondary">
        <tr>
         <th>ジャンル</th>
         <th></th>
        </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
        <tr>
         <td><%= genre.name %></td>
         <td>
           <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success"%>
         </td>
        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>
