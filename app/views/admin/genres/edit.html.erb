<div class=".container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="bg-info">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-4">
      <%= form_with model: @genre, url:admin_genre_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
