<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <% @orders.each do |order| %>
            <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d') %>
                <% end %>
            </td>
            <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
            <td><%= order.product_total %></td>
            <td><%= order.order_status_i18n %></td>
        <% end %>
        </tr>
    </tbody>
</table>