<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <% @orders.each do |order| %>
            <td>
                <%= link_to admin_order_path do %>
                  <%= order.created_at %>
                <% end %>
            </td>
            <td><%= order.customer_id.display_name %></td>
            <td><%= order.amount %></td>
            <td><%= order.order_status %></td>
        <% end %>
        </tr>
    </tbody>
</table>