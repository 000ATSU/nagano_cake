<div class=".container">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="bg-info">
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4"></div>
    <div>
      <table class="table table-borderless">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
        </tr>
      <% end %>
      <%= render "admin/shared/links" %>
      </table>
    </div>
  </div>
</div>

