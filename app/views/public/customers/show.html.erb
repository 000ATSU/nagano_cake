<div class=".container">
  <div class="row mt-4">
    <div class="col-2"></div>
    <div class="bg-info rounded-sm">
      <h2>
        マイページ
      </h2>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-2"></div>
    <div>
      <h4>登録情報</h4>
    </div>
    <div class="col-1"></div>
    <div>
      <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %><br>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-2"></div>
    <div>
      <table class="table table-bordered">
        <tr>
          <th class="bg-secondary">氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th class="bg-secondary">カナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-secondary">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-secondary">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div>
      <h3>配送先</h3>
    </div>
    <div class="col-1"></div>
    <div>
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-2"></div>
    <div>
      <h3>注文履歴</h3>
    </div>
    <div class="col-1"></div>
    <div>
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
