<h1>ショッピングカート</h1>
<%= link_to "カートを空にする",  destroy_all_public_cart_item_path(current_customer.id) %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= image_tag cart_item.item.get_item_image(80, 80) %></th>
        <th><%= cart_item.item.name %></th>
        <th><%= cart_item.item.with_tax_price %></th>
        <th>
          <%= form_with model: cart_item, url: "/public/cart_items/#{cart_item.id}", method: :patch do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit '変更' %>
          <% end %>
        </th>
        <th><%= cart_item.subtotal %></th>
        <th>
          <%= link_to '削除', "/public/cart_items/#{cart_item.id}", method: :delete %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path %>
<strong>合計金額<%= @total %></strong>
<%= link_to "情報入力に進む",  new_public_order_path %>