<h1>ショッピングカート</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= image_tag cart_item.item.get_item_image(80, 80) %></th>
        <th><%= cart_item.item.name %></th>
        <th><%= cart_item.item.with_tax_price %></th>
        <th>
          <%= form_with model: cart_item, url: '/public/cart_items/:id', method: :patch do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.select :amount, options_for_select(@cart_item, {selected: cart_item.amount.to_i} ) %>
            <%= f.submit '変更' %>
          <% end %>
        </th>
        <th><%= cart_item.subtotal %></th>
      </tr>
    <% end %>
  </tbody>
</table>