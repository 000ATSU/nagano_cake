<%= image_tag @item.get_item_image(200, 200) %>
<div>
  <h1><%= @item.name %></h1>
  <%= @item.introduction %><br>
  ￥<%= @item.with_tax_price %>（税込）
</div>
<%= form_with model: @cart_item, url: '/public/cart_items', method: :post do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..10], include_blank: "個数を選択", required: true %>
  <%= f.submit 'カートに入れる'%>
<% end %>
