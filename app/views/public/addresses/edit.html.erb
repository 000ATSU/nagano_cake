<div class=".container">
  <div class="row mt-3">
    <div class="col-1"></div>
    <div class="bg-info rounded-sm">
      <h1>配送先編集</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-1"></div>
    <div class="col-6">
      <%= form_with model: @address, url: public_address_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code, required: true %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, required: true %></td>
          <td><%= f.hidden_field :customer_id, :value => current_customer.id %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field :name, required: true %></td>
          <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
