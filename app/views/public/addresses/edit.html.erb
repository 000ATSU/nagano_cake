<h1>配送先編集</h1>
<%= form_with model: @address, url: public_address_path do |f| %>
  <div>
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code, required: true %>
  </div>

  <div>
    <label>住所</label>
    <%= f.text_field :address, required: true %>
  </div>

  <div>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
  </div>

  <div>
    <label>宛名</label>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.submit '変更内容を保存' %>
  </div>
<% end %>
