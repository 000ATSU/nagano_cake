<div class=".container">
  <div class="row mt-5">
    <div class="mx-auto">
      <h2 class="bg-info rounded-sm">
        新規会員登録
      </h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <th>
            <%= f.label :名前 %>
          </th>
          <td>
            <%= f.label :（姓） %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            <%= f.label :（名）%>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "first_name" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :フリガナ %>
          </th>
          <td>
            <%= f.label :セイ %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            <%= f.label :メイ %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :メールアドレス %>
          </th>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :郵便番号（ハイフンなし） %>
          </th>
          <td>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :住所 %>
          </th>
          <td>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :電話番号（ハイフンなし） %>
          </th>
          <td>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :パスワード（6文字以上） %>
          </th>
          <td>
            <%= f.text_field :password, autocomplete: "password" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :パスワード（確認用） %>
          </th>
          <td>
            <%= f.text_field :password_confirmation, autocomplete: "password" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <h2 class="bg-info rounded-sm">
        既に登録済みの方
      </h2>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


