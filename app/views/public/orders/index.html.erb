<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
        <td><%= order.created_at %></td>
        <td>
          <%= order.shipping_zip_code %>
          <%= order.shipping_address %>
          <%= order.delivery_name %>
        </td>
        <td><%=  %></td>
        <td><%= order.payment_amount %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", public_order_path(order.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>
