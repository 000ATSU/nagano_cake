<h1>注文履歴詳細</h1>
<div>
    <strong>注文情報</strong>
    <table>
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>支払方法</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                    〒<%= @order.shipping_zip_code %>
                    <%= @order.shipping_address %>
                    <%= @order.delivery_name %>
                </td>
                <td><%= @order.method_of_payment_i18n %></td>
                <td><%= @order.order_status_i18n %></td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <strong>請求情報</strong>
    <table>
        <thead>
            <tr>
                <th>商品合計</th>
                <th>配送料</th>
                <th><strong>ご請求額</strong></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= @order.payment_amount - @order.postage %></td>
                <td><%= @order.postage %></td>
                <td><%= @order.payment_amount %></td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <strong>注文内容</strong>
    <table>
        <thead>
            <tr>
                <th>商品</th>
                <th>単価（税込）</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.item.price %></td>
                <td><%= order_detail.quantity %></td>
                <td><%= order_detail.subtotal %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
