<div class=".container">
  <div class="row mt-3">
    <div class="col-1"></div>
    <div class="bg-info rounded-sm">
      <h1>注文履歴詳細</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-1"></div>
    <div class="col-6">
      <strong>注文情報</strong>
      <table class="table table-bordered">
        <tr>
          <th class="bg-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th  class="bg-secondary">配送先</th>
          <td>
            〒<%= @order.shipping_zip_code %>
            <%= @order.shipping_address %>
            <%= @order.delivery_name %>
          </td>
        </tr>
        <tr>
          <th class="bg-secondary">支払方法</th>
          <td><%= @order.method_of_payment_i18n %></td>
        </tr>
        <tr>
          <th  class="bg-secondary">ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-1"></div>
    <div class="col-4">
      <strong>請求情報</strong>
      <table class="tabale table-bordered">
        <tr>
          <th class="bg-secondary">商品合計</th>
          <td><%= @order.payment_amount - @order.postage %></td>
        </tr>
        <tr>
          <th class="bg-secondary">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="bg-secondary">ご請求額</th>
          <td><%= @order.payment_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-1"></div>
    <div>
      <strong>注文内容</strong>
      <table class="table table-bordered">
        <thead class="bg-secondary">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
